{
  "apiEndpoint": "YOUR_API_ENDPOINT_HERE",
  "apiKey": "YOUR_API_KEY_HERE",
  "apiTimeout": 30000,
  "sources": [
    "techcrunch",
    "venturebeat",
    "the-verge",
    "arxiv",
    "nature-ai",
    "wired"
  ],
  "categories": [
    "artificial-intelligence",
    "machine-learning",
    "deep-learning",
    "large-language-models",
    "computer-vision",
    "natural-language-processing",
    "generative-ai",
    "neural-networks"
  ],
  "keywords": [
    "AI",
    "artificial intelligence",
    "machine learning",
    "deep learning",
    "LLM",
    "GPT",
    "ChatGPT",
    "Claude",
    "transformer",
    "neural network",
    "computer vision",
    "NLP",
    "generative AI",
    "AGI",
    "diffusion model",
    "reinforcement learning"
  ],
  "maxTopics": 20,
  "dateRangeDays": 7,
  "scoring": {
    "interestingness": {
      "breakthrough": { "min": 70, "max": 80, "label": "突破性创新" },
      "significant": { "min": 60, "max": 69, "label": "重大进展" },
      "notable": { "min": 50, "max": 59, "label": "显著更新" },
      "routine": { "min": 30, "max": 49, "label": "常规新闻" }
    },
    "usefulness": {
      "highly_actionable": { "min": 18, "max": 20, "label": "高度可执行" },
      "valuable": { "min": 15, "max": 17, "label": "有价值" },
      "informative": { "min": 10, "max": 14, "label": "信息丰富" },
      "limited": { "min": 5, "max": 9, "label": "有限效用" }
    }
  },
  "reportSettings": {
    "excellentThreshold": 80,
    "goodThreshold": 60,
    "includeTimeline": true,
    "includeProductDetails": true,
    "includeSources": true,
    "maxSourcesPerTopic": 5
  },
  "webSearch": {
    "enabled": true,
    "resultsPerTopic": 5,
    "delayBetweenRequests": 1000
  }
}
